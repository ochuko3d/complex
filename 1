version: '3'
services:

  postgres:
    image: 'postgres:latest'
  redis:
    image: 'redis:latest'
  server:
    build:
      dockerfile: Dockerfile.dev
      context: ./server
    volume:
      - /app/node_modules
      - ./server:/app
    environment:
      - REDIS_HOST=redis
      - REDIS_PORT=6379 
      - PGUSER=postgres
      - PGHOST=postges
      - PGDATABASE=postgres
      - PGPASSWORD=postgres_password
      - PGPORT=5432


